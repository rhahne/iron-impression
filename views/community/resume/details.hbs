<section class="section">
    <div class="container">
        <h1 class="title">{{resume.title}}</h1>
        <img src="{{resume.path}}" alt="{{resume.title}}">
        <p class="content">{{resume.feedbackDescription}}</p>

        {{!-- Write comment --}}
        <article class="media">
            <figure class="media-left">
                <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
            </figure>
            <div class="media-content">
                <div class="field">
                    <p class="control">
                        <form action="/community/resume/details/{{resume.id}}/comment" method="POST">
                            <textarea name="text" class="textarea" placeholder="Add a comment..."></textarea>
                    </p>
                </div>
                <div class="field">
                    <p class="contol">
                        <button type="submit" class="button">Post comment</button>
                        </form>
                    </p>
                </div>
            </div>
            <br>
        </article>

        {{!-- Comments --}}
        {{#each comments}}
        <article class="media">
            <figure class="media-left">
                <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong>{{this.user.firstName}} {{this.user.lastName}}</strong>
                        <br>
                        {{this.text}}
                        <br>
                        {{!-- <small><a>Like</a> · <a>Reply</a> · 3 hrs</small> --}}
                    </p>
                </div>
            </div>
        </article>
        {{/each}}
    </div>
</section>