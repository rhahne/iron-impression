<form action="/users/{{loggedUser.id}}/edit" method="POST">
  FirstName:<br>
  <input type="text" name="firstName" value="{{loggedUser._doc.firstName}}">
  <br>
  LastName:<br>
  <input type="text" name="lastName" value="{{loggedUser._doc.lastName}}">
  <br>
  eMail:<br>
  <input type="text" name="eMail" value="{{loggedUser._doc.eMail}}">
  <br><br>
  <button>Change</button>
</form>

<form action="/users/{{loggedUser.id}}/editPassword" method="POST">
  Old Password:<br>
  <input type="text" name="oldPassword">
  <br>
  new Password:<br>
  <input type="text" name="newPassword">
  <br>
  repeat new Password:<br>
  <input type="text" name="newPassword2">
  <br><br>
  <button>Change Password</button>
</form>


