<section class="section">
  <div class="container">
    <h1 class="title is-2">
      Create a new Password, slohn!
    </h1>
    <p class="content">
      Reset password for account: {{email.eMail}}
    </p>

    <form action="/users/resetPassword?emailHash={{emailHash}}" method="post">
      <div class="field">
        <label class="label">New Password</label>
        <div class="control has-icons-left">
          <input class="input" type="password" name="password">
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <label class="label">Repeat new Password</label>
        <div class="control has-icons-left">
          <input class="input" type="password" name="password2">
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <p class="control">
          <button class="button is-success">
            Change my password!
          </button>
        </p>
      </div>
    </form>
  </div>
</section>